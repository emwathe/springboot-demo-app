<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="SALES_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/sales.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/sales.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example.demo.service.SalesLogger" level="INFO">
        <appender-ref ref="SALES_FILE"/>
    </logger>
</configuration>
